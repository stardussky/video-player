{
  "editor.tabSize": 4,
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true
  },
  "eslint.alwaysShowStatus": true,
  "eslint.options": {
    "extensions": [".html", ".js", ".jsx"]
  },
  "eslint.workingDirectories": ["./"],
  "stylelint.validate": [
    "scss",
    "jsx",
    "css"
  ]
}